generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model WebhookEvent {
  id        String   @id @default(cuid())
  type      String
  payload   Json
  createdAt DateTime @default(now())
}

model CustomerPaymentMethod {
  id         String   @id @default(cuid())
  customerId String
  pmId       String
  brand      String?
  last4      String?
  createdAt  DateTime @default(now())
}

